<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eu.front.dao.RecoveryDao">
    <select id="queryRecovery" resultType="map">
        SELECT * FROM tb_recovery where recovery_code like #{recoveryCode} order by id DESC  LIMIT #{start}, #{end}
    </select>

    <select id="queryRecoveryCount" resultType="long">
        SELECT count(1)
        FROM tb_recovery
    </select>
    <update id="addRecovery" parameterType="Recovery">
        INSERT INTO tb_recovery(recovery_year,recovery_month,recovery_code,recovery_steel_id,recovery_capacity,recovery_pirce,recovary_storage_id)
        VALUES (#{recoveryYear},#{recoveryMonth},#{recoveryCode},#{recoverySteelId},#{recoveryCapacity},#{recoveryPirce},#{recovaryStorageId})
    </update>
    <delete id="deleteRecovery" parameterType="string">
        delete  from tb_recovery where id =#{id}
    </delete>
    <select id="findById" parameterType="int" resultType="Recovery">
        SELECT * from tb_recovery where id=#{id}
    </select>
