<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eu.front.dao.SaleDao">
    <select id="querySale" resultType="map">
        SELECT * FROM tb_sale where sale_code like #{saleCode} order by id DESC  LIMIT #{start}, #{end}
    </select>

    <select id="querySaleCount" resultType="long">
        SELECT count(1)
        FROM tb_sale
    </select>
    <update id="addSale" parameterType="Sale">
        INSERT INTO tb_sale(recovery_year,recovery_month,recovery_code,recovery_steel_id,recovery_capacity,recovery_pirce,recovery_storage_id)
        VALUES (#{recoveryYear},#{recoveryMonth},#{recoveryCode},#{recoverySteelId},#{recoveryCapacity},#{recoveryPirce},#{recoveryStorageId})
    </update>
    <delete id="deleteSale" parameterType="string">
        delete  from tb_sale where id =#{id}
    </delete>
    <select id="findById" parameterType="int" resultType="Sale">
        SELECT * from tb_sale where id=#{id}
    </select>
