<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eu.front.dao.SteelDao">
    <!-- Steel的resultMap,column是给数据库列起的别名,它对应property类的属性-->
    <resultMap id="result_Steel_Map" type="com.eu.front.entity.Steel">
        <id column="id" property="id" />
        <result column="steel_version" property="steelVersion" />
        <result column="steel_name" property="steelName" />
        <result column="steel_price" property="steelPrice" />
    </resultMap>

    <!-- 数据库中表名为:tb_steel的列名,as前是数据库的列明,as后是列的别名用于映射成实体类中的属性,需要注意的是别名必须与resultMap中的column别名一致 -->
    <sql id="tb_steel_Column">
        tb_steel.id as id
        ,tb_steel.steel_version as steel_version
        ,tb_steel.steel_name as steel_name
        ,tb_steel.steel_price as steel_price
    </sql>

    <!--获得类名为:Steel对应的数据库表的数据总行数 -->
    <select id="getSteelRowCount" resultType="java.lang.Long">
        select count(id) from tb_steel
    </select>
    <!-- 获得类名为:Steel对应数据库中表的数据集合 -->
    <select id="selectSteel" resultMap="result_Steel_Map">
        select 
        <include refid="tb_steel_Column" /> 
        from tb_steel
    </select> 

    <!-- 获得一个Steel对象,以参数Steel对象中不为空的属性作为条件进行查询-->
    <select id="selectSteelByObj" parameterType="com.eu.front.entity.Steel" resultMap="result_Steel_Map">
        select 
            <include refid="tb_steel_Column" /> 
        from tb_steel
        <where>
            <if test="steelPrice != null "> and tb_steel.steel_price = #{steelPrice}</if>
            <if test="steelName != null "> and tb_steel.steel_name = #{steelName}</if>
            <if test="steelVersion != null "> and tb_steel.steel_version = #{steelVersion}</if>
            <if test="id != null "> and tb_steel.id = #{id}</if>
        </where>
    </select> 

    <!-- 通过Steel的id获得对应数据库中表的数据对象-->
    <select id="selectSteelById" parameterType="java.lang.Integer" resultMap="result_Steel_Map">
        select 
            <include refid="tb_steel_Column" /> 
        from tb_steel
        where tb_steel.id = #{id}
    </select> 

    <!-- 将Steel插入到对应数据库的表中,包括属性值为null的数据-->

    <insert id="insertSteel" parameterType="com.eu.front.entity.Steel">
        insert into tb_steel(id,steel_version,steel_name,steel_price) 
        values(#{id},#{steelVersion},#{steelName},#{steelPrice})
    </insert>

    <!-- 将Steel中属性值不为null的数据,插入到对应数据库的表中-->
    <insert id="insertNonEmptySteel" parameterType="com.eu.front.entity.Steel">
        insert into tb_steel
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="steelVersion != null">steel_version,</if>
            <if test="steelName != null">steel_name,</if>
            <if test="steelPrice != null">steel_price,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null"> #{id},</if>
            <if test="steelVersion != null"> #{steelVersion},</if>
            <if test="steelName != null"> #{steelName},</if>
            <if test="steelPrice != null"> #{steelPrice},</if>
        </trim>
    </insert>

    <!-- 通过Steel的id将数据库表中对应的数据删除-->
    <delete id="deleteSteelById" parameterType="java.lang.Integer">
        delete from tb_steel
        where id = #{id}
    </delete>

    <!-- 通过Steel的id将Steel的数据更新到数据库中对应的表,包括值null的数据-->
    <update id="updateSteelById" parameterType="com.eu.front.entity.Steel">
        update tb_steel set
            steel_version=#{steelVersion}
            ,steel_name=#{steelName}
            ,steel_price=#{steelPrice}
        where id=#{id}
    </update>

    <!-- 通过Steel的id将Steel中属性值不为null的数据更新到数据库对应的表中-->
    <update id="updateNonEmptySteelById" parameterType="com.eu.front.entity.Steel">
        update tb_steel
        <set>
            <if test="steelVersion != null">
                steel_version=#{steelVersion},
            </if>
            <if test="steelName != null">
                steel_name=#{steelName},
            </if>
            <if test="steelPrice != null">
                steel_price=#{steelPrice},
            </if>
        </set>
        where id=#{id}
    </update>

</mapper>